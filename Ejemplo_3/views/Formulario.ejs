  </nav>
    <form id="dataForm">
        <label for="col1">Nombres:</label>
        <input type="text" id="col1" name="col1" required>
        <label for="col2">Apellido:</label>
        <input type="text" id="col2" name="col2" required>
        <label for="col3">Peso:</label>
        <input type="text" id="col3" name="col3" required>
        <button type="submit">Agregar</button>
    </form>

    <table id="dataTable">
        <thead>
            <tr>
                <th>NOMBRES</th>
                <th>apellidos</th>
                <th>Peso Kg</th>
            </tr>
        </thead>
        <tbody>
            <!-- Las filas se agregarán aquí -->
        </tbody>
    </table>

    <script>
        document.getElementById('dataForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Evita que el formulario se envíe

            // Obtiene los valores de los campos del formulario
            const col1 = document.getElementById('col1').value;
            const col2 = document.getElementById('col2').value;
            const col3 = document.getElementById('col3').value;

            // Crea una nueva fila y celdas
            const newRow = document.createElement('tr');
            const cell1 = document.createElement('td');
            const cell2 = document.createElement('td');
            const cell3 = document.createElement('td');

            // Asigna los valores a las celdas
            cell1.textContent = col1;
            cell2.textContent = col2;
            cell3.textContent = col3;

            // Agrega las celdas a la fila
            newRow.appendChild(cell1);
            newRow.appendChild(cell2);
            newRow.appendChild(cell3);

            // Agrega la fila al cuerpo de la tabla
            document.querySelector('#dataTable tbody').appendChild(newRow);

            // Limpia el formulario
            document.getElementById('dataForm').reset();
        });
    </script>
</body>
</html>